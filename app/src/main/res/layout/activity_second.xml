<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200px"
        skin:attrs="text:second_title_txt|background:second_title_bg_color|textColor:second_title_color"
        android:gravity="center"
        android:text="@string/second_title_txt"
        android:background="@color/second_title_bg_color"
        android:textColor="@color/second_title_color"
        android:textSize="30sp"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>